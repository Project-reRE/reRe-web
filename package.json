{
  "name": "reRe-web",
  "version": "1.0.1",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "dotenv -- turbo run dev",
    "web": "dotenv -- turbo run dev --filter=web -- -p 3000",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start-pm2:dev": "pm2 start ecosystem.config.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "package.json": [
      "pnpm lint:package"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "msw": "^2.3.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "^2.0.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.49.2",
    "@tanstack/react-query-devtools": "^5.51.16",
    "@types/lodash": "^4.17.7",
    "lodash": "^4.17.21"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
